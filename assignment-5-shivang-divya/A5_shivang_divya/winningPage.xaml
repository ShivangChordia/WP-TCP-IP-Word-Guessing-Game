      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:A5_shivang_divya"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="winningPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="Congratulations! You Won" FontSize="24" HorizontalAlignment="Center" Margin="0,0,0,20"/>
            <Button Content="Play Again" Width="100" Height="30" Click="PlayAgainButton_Click"/>
        </StackPanel>
    </Grid>
</Page>
